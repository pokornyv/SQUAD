;M           energy axis contains 2**M-1 points
;dE          energy step
;rootf       method of finding n and mu in self-consitent loop
;ConvN       convergence criterium for n and mu in static self-consistent loop
;ConvX       convergence criterium for brentq/fixed_point
;ConvHF      convergence criterium for n and mu in HF equations
;MuMin       lower limit of mu for bisection (brentq)
;MuMax       upper limit of mu for bisection (brentq)
;HF_max_iter maximum number of iterations for HF solver
;WriteIO     write to standard output? (0/1)
;WriteFile_x write data files? (0/1)
;EmaxFiles   frequency range for output
;EstepFiles  energy step in output files is EstepFiles x dE
;offset_x    offset of energies to avoid poles at gap edges

[params]

M                :  20
dE               :  1e-4

rootf            :  brentq
;rootf            :  fixed_point
ConvN            :  1e-4
ConvX            :  1e-5
ConvHF           :  1e-6
MuMin            : -2.0
MuMax            :  2.0
HF_max_iter      :  10000

WriteIO    	  	 :  0

WriteFile_HFGF   :  0
WriteFile_Bub    :  0
WriteFile_2ndSE  :  0
WriteFile_2ndGF  :  1

EmaxFiles        :  2
EstepFiles       :  100

offset_x         : 1e-12

